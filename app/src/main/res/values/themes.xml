<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Buddy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/backgroundLight</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E84545</item>
        <item name="colorSecondaryVariant">#903749</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundDark</item>
        <!-- Customize your theme here. -->

        <item name="android:actionBarStyle"   tools:ignore="NewApi">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="editTextStyle">@style/MyEditText</item>
        <item name="android:textColorHighlight">@color/secondary</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">@color/backgroundDark</item>
        <item name="background">@color/backgroundDark</item>
    </style>
    <style name="MyEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_box</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>